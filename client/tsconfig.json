{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "types": [
      "@types/node",
      "@types/webpack-env",
    ]
  },
  "exclude": ["node_modules"]
}
